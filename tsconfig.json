{
  "compilerOptions": {
    "lib": ["dom", "es5", "es2015.core", "es2015.iterable"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "module":"commonjs",
    "target":"es6",
    "outDir":"dist/"
  },
  "include":[
    "src/**/*.ts"
  ],
  "exclude":[
    "node_modules/"
  ]
}
